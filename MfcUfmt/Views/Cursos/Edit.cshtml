@model MfcUfmt.Models.ViewModels.CursoViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Curso</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Curso.Id" />
            <div class="form-group">
                <label asp-for="Curso.NomeCurso" class="control-label"></label>
                <input asp-for="Curso.NomeCurso" class="form-control" />
                <span asp-validation-for="Curso.NomeCurso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso.Descricao" class="control-label"></label>
                <input asp-for="Curso.Descricao" class="form-control" />
                <span asp-validation-for="Curso.Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trabalhos" class="control-label"></label>
                <select asp-for="Curso.TrabalhoId" asp-items="@(new SelectList(Model.Trabalhos,"Id","NomeTrabalho"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
